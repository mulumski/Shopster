<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/mTvSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="33dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Sign in to Shopster:"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/mEdtEmails"
        app:layout_constraintStart_toStartOf="@+id/mEdtEmails"
        app:layout_constraintTop_toBottomOf="@+id/mTvwelcome" />

    <EditText

        android:id="@+id/mEdtEmails"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginBottom="34dp"
        android:ems="10"
        android:hint="Enter Email:"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/mEdtPasswaads"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mTvSignIn" />

    <EditText
        android:id="@+id/mEdtPasswaads"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginBottom="53dp"
        android:ems="10"
        android:hint="Input Password:"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/mBtnSignIns"
        app:layout_constraintStart_toStartOf="@+id/mEdtEmails"
        app:layout_constraintTop_toBottomOf="@+id/mEdtEmails" />

    <Button
        android:id="@+id/mBtnSignIns"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="165dp"
        android:backgroundTint="#345"
        android:text="Sign In"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/mEdtPasswaads"
        app:layout_constraintTop_toBottomOf="@+id/mEdtPasswaads" />

    <TextView
        android:id="@+id/mTvwelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="68dp"
        android:fontFamily="casual"
        android:text="WELCOME BACK "
        android:textSize="35dp"
        app:layout_constraintBottom_toTopOf="@+id/mTvSignIn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>