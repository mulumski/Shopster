<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductActivity">

        <EditText
            android:id="@+id/product_name_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:hint="Product Name"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_margin="8dp" />

        <EditText
            android:id="@+id/product_price_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:hint="Product Price"
            android:layout_below="@id/product_name_edit_text"
            android:layout_alignParentStart="true"
            android:layout_margin="8dp" />

        <EditText
            android:id="@+id/product_barcode_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:hint="Product Barcode"
            android:layout_below="@id/product_price_edit_text"
            android:layout_alignParentStart="true"
            android:layout_margin="8dp" />

        <Button
            android:id="@+id/add_product_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Product"
            android:layout_below="@id/product_barcode_edit_text"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp" />



    </RelativeLayout>
